<Window x:Class="olymipc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:olymipc"
        mc:Ignorable="d"
        Title="MainWindow" Height="630" Width="900">
    <Grid>

        <Canvas Margin="0,0,0,0"  Name="canv">
            <Image x:Name="image" Height="300" Width="300" Margin="280 80 0 0" Source=".\img\1.jpg"/>
            <Label x:Name="firsttips" Style="{StaticResource input_tips_}" Margin="200 410 0 0"/>
                     </Canvas>

            <Canvas Background="AliceBlue" Margin="0 0 0 530" >
            <Label x:Name="label" Content="OLYMIPC" FontFamily="Century Gothic" FontSize="34" Foreground="DarkSeaGreen" Margin="10 0 0 0"/>
            <Button x:Name="input" Content=" INPUT " Style="{StaticResource iFont_btn}" Margin="650 18 0 0" Click="input_Click"/>
            <Button x:Name="rank" Content=" RANK " Style="{StaticResource iFont_btn}" Margin="724 18 0 0" Click="rank_Click"/>
            <Button x:Name="query" Content="QUERY" Style="{StaticResource iFont_btn}" Margin="800 18 0 0" Click="query_Click"/>
        </Canvas>
    </Grid>
</Window>
